<!DOCTYPE html>
<html>
  <head>
    <title>Adbum</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body onload="PR.prettyPrint()">
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainNavbar" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Adbum', root_path, class: 'navbar-brand' %>
        </div>
        <div class="collapse navbar-collapse" id="mainNavbar">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if controller_name == 'home' %>">
              <%= link_to 'Home', root_path, class: 'nav-link' %>
            </li>
            <li class="<%= 'active' if controller_name == 'images' %>">
              <%= link_to 'Repository', images_path, class: 'nav-link' %>
            </li>
            <li class="<%= 'active' if controller_name == 'sandbox' %>">
              <%= link_to 'Sandbox', sandbox_path, class: 'nav-link' %>
            </li>
            <li class="<%= 'active' if controller_name == 'docs' %>">
              <%= link_to 'Docs', docs_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
