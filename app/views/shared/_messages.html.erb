<div id="messages">
  <% flash.each do |type, message| %>
    <div class="alert <%= get_bootstrap_alert_class(type) %> fade in">
      <button class="close" data-dismiss="alert">Ã—</button>
      <% if message.is_a? Array %>
        <ul>
          <% message.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% else %>
        <%= message %>
      <% end %>
    </div>
  <% end %>
  <% flash.clear %>
</div>